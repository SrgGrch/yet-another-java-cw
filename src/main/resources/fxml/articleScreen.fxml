<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane prefHeight="850.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="newsline.ui.ArticleScreenController">
    <content>
        <VBox prefWidth="600.0">
            <children>
                <HBox maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <children>
                        <Label fx:id="article_title" prefWidth="503.0" text="Title" wrapText="true" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="8.0" right="8.0" top="8.0" />
                            </HBox.margin>
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="article_author" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="20.0" prefWidth="107.0" text="Author" textFill="#00000094">
                            <HBox.margin>
                                <Insets left="8.0" right="8.0" top="8.0" />
                            </HBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Label fx:id="article_subtitle" text="SubTitle" wrapText="true">
                    <VBox.margin>
                        <Insets left="8.0" right="8.0" top="8.0" />
                    </VBox.margin>
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <Label fx:id="article_text" text="Text" wrapText="true">
                    <VBox.margin>
                        <Insets left="8.0" right="8.0" top="8.0" />
                    </VBox.margin>
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            <Label text="Комментарии:">
               <VBox.margin>
                  <Insets left="8.0" right="8.0" top="16.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
                <ListView fx:id="article_commentList" focusTraversable="false" prefHeight="200.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets left="8.0" right="8.0" top="8.0" />
                    </VBox.margin>
                </ListView>
                <Button fx:id="article_newComment" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Добавить комментарий">
                    <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="8.0" right="8.0" top="8.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
